#######################################
# Please do not edit this file directly
#######################################

# Version: 3
# Dependencies: flake8>=3.4, flake8-strict>=0.2.1

[flake8]
exclude = docker,deploy,templates,vm,requirements,media,.env,env,node_modules,braindrain,samples,logs,data,__pycache__,build,dist,*_settings.py,settings_*.py,*migrations*
max-line-length = 120
max-complexity = 10
ignore =
    # naming conventions is handled by pylint
    N,
    # default flake8 ignores for reference https://github.com/PyCQA/flake8/blob/master/src/flake8/defaults.py#L15
    E121,E123,E126,E226,E24,E704,W503,W504,
statistics = true
